<div class="container mt-4">
  <div class="text-center">
    <h2>My Profile</h2>
    <div class="card mt-3 mx-auto" style="max-width: 18rem;">
      <div class="card-header">Profile Details</div>
      <div class="card-body">
        <div id="userDisplay">
          <p class="card-text">Username: <%= @user.username %></p>
          <p class="card-text">First name: <%= @user.first_name %></p>
          <p class="card-text">Last name: <%= @user.last_name %></p>
          <p class="card-text">Email: <%= @user.email %></p>
          <div class="d-flex justify-content-between">
            <button class="btn btn-info" onclick="toggleEdit('user')">Edit Profile</button>
            <%= link_to destroy_user_session_path, :class => "navigation-bar-link", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
              <button class="btn btn-danger">Logout</button>
            <% end %>
          </div>
        </div>
        <div id="userEdit" style="display: none;">
          <%= form_for(@user, as: :user, url: user_registration_path, html: { method: :patch }) do |f| %>
            <%= f.label :username %>
            <%= f.text_field :username, class: 'form-control' %>
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'form-control' %>
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control' %>
            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <h3>Preferences</h3>
            <%= f.fields_for :preference, @user.preference do |p| %>
              <div class="form-group">
                <%= p.label :level, 'Cooking Level' %>
                <%= p.select :level, options_for_select(["Beginner", "Intermediate", "Advanced"], @user.preference.level), {}, {class: 'form-control'} %>
              </div>
            <% end %>

            <%= f.submit "Save Changes", class: "btn btn-success" %>
            <button type="button" class="btn btn-secondary" onclick="toggleEdit('user')">Cancel</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <% current_user.bookmarks.each do |bookmark| %>
    <p> <%= bookmark.recipe.name %> </p>
  <% end %>
</div>


<script>
  function toggleEdit(section) {
    var displaySection = document.getElementById(section + 'Display');
    var editSection = document.getElementById(section + 'Edit');
    if (displaySection.style.display === 'none') {
      displaySection.style.display = 'block';
      editSection.style.display = 'none';
    } else {
      displaySection.style.display = 'none';
      editSection.style.display = 'block';
    }
  }
</script>
